.trnsListDate
  display grid
  grid-template-columns minmax(0, max-content) minmax(0, max-content)
  grid-template-rows repeat(2, minmax(0, max-content))

  &__day
    grid-column 1 / 2
    grid-row 1 / 3
    padding-right $m6
    align-self center
    font-size 34px
    line-height 28px

  &__weekDay
    grid-column 2 / 3
    grid-row 1 / 2
    font-size 14px

  &__other
    grid-column 2 / 3
    grid-row 2 / 3
    display flex
    padding-top $m2
    color var(--c-font-4)
    font-size 14px

  &__month
    margin-right $m4
