.currencies
  display flex
  flex-wrap wrap

  &__item
    flex 1
    text-align center
    margin 0 -1px -1px 0
    padding $m7 $m7
    border 1px solid var(--c-bg-6)

    &:hover
      @media $media-laptop
        background var(--c-bg-6)

    &._active
      color var(--c-font-1)
      background var(--c-bg-8)
