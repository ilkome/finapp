.scroll
.scrollbar
  scrollbar()
  height 100%
  overflow hidden
  overflow-y auto

scrollbar()
  &::-webkit-scrollbar
    width 6px
    height 6px

  &::-webkit-scrollbar-track
    background transparent
    border-radius 10px

  &::-webkit-scrollbar-thumb
    background grey
    border-radius 10px

    &:hover
      background darkgrey
